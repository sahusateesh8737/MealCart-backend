{
  "name": "mealcart-backend",
  "version": "1.0.0",
  "description": "Backend for MealCart - AI recipe and grocery list generator",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "LOG_LEVEL=DEBUG nodemon server.js",
    "dev:trace": "LOG_LEVEL=TRACE nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "logs": "tail -f logs/app-$(date +%Y-%m-%d).log 2>/dev/null || echo 'No log file found for today. Logs are written to logs/app-YYYY-MM-DD.log'",
    "logs:watch": "watch 'tail -20 logs/app-$(date +%Y-%m-%d).log 2>/dev/null || echo \"No log file found\"' .",
    "docker:build": "docker build -t mealcart-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env mealcart-backend",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "recipe",
    "grocery",
    "mern",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Satish Sahu",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-fetch": "^3.3.2",
    "serverless-http": "^3.2.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": "18.x"
  }
}
